// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Locations {
  id        Int     @id @default(autoincrement())
  name      String
  image     String
  email     String  @unique
  whatsapp  String  @unique
  latitude  Decimal
  longitude Decimal
  city      String
  uf        String
  items     Items   @relation(fields: [itemsId], references: [id])
  itemsId   Int
}

model Items {
  id        Int         @id @default(autoincrement())
  title     String
  image     String
  Locations Locations[]
}
